<h1>Recipes with  <%= @search_term %></h1>
<% if @recipes.length == 0 %>
<p> No recipes found with relevant information... Sorry</p>
<% else %>
<table border="1">
	<tr>
		<th>Image</th>
		<th>Title</th>
		<th>Social Rank of the Recipe</th>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr class=<%= cycle('even','odd')%>>
		<td><%= link_to image_tag(recipe["image_url"],:style=>'width:100px;height:100px'), recipe["source_url"]%></td>
		<% recipe_title = sanitize recipe['title'] %>
		<td><%= link_to recipe_title, recipe["source_url"] %></td>
		<td><%= recipe["social_rank"]%></td>

	</tr>
	<% end %>

</table>
<% end %>

 
